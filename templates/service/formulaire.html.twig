{% extends 'base.html.twig' %}

{% block title %}Ajouter un service{% endblock %}

{% block body %}
    {% if app.user %}


        {{ form_start(formService) }}
        <form action=""  method="post">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6  ">
                        <h1 class="titre">HOPITAL LILLE</h1>
                        <div class="card p-3">
                            {{ form_row(formService.NomService, {'attr': {'class': 'form-control'}}, {'fa' : 'fa-long-arrow-right'}) }}

                            <div class="text-center mt-3">
                                {{ form_row(formService.Valider, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_end(formService) }}
                        </div>
                    </div>
                    <div class="col-sm-3"></div>
                </div>
            </div>
        </form>
    {% endif %}
{% endblock %}