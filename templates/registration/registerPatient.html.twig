{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {{ form_start(registrationForm) }}
    <form action=""  method="post">
        <div class="container">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6  ">
                    <h1 class="titre">HOPITAL LILLE</h1>
                    <div class="card p-3">
                        {{ form_row(registrationForm.Nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(registrationForm.Prenom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control'}, 'label': 'Mot de passe'}) }}
                        {{ form_row(registrationForm.photoUrl,{'attr': {'class': 'form-control'}}) }}
                        {{ form_row(registrationForm.agreeTerms , {'label': 'Vous acceptez les conditions : '}) }}
                        <div class="text-center mt-3">
                            {{ form_row(registrationForm.Valider, {'attr': {'class': 'form-control'} }) }}
                        </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>
    </form>


{% endblock %}
