{% extends 'base.html.twig' %}

{% block title %}Bonjour {{ utilisateur.Prenom }} !{% endblock %}

{% block body %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <p class="titre-grand">Ajouter un horaire</p>
    <div class="container">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10 div-blanche">
                <div class="container">
                    {{ form_start(form) }}
                    {{ form_row(form.nomHoraire,{'attr': {'class': 'form-control'}}) }}
                    {{ form_row(form.horaire,{'attr': {'class': 'form-control'}}) }}
                    <br>
                    {{ form_row(form.Ajouter,{'attr': {'class': 'btn btn-primary'}}) }}
                    {{ form_end(form) }}


                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
    <script src="{{ asset("scripts/rdv.js") }}"></script>

{% endblock %}
