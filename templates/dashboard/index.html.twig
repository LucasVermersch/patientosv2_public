                ['J-2', {{ tabJour[1] }}],
                ['J-1', {{ tabJour[0] }}],
                ['J-J', {{ nbOccupee }}],
                ['J+1', {{ tabJours[0] }}],
                ['J+2', {{ tabJours[1] }}],
                ['J+3', {{ tabJours[2] }}],
                ['J+4', {{ tabJours[3] }}],
                ['J+5', {{ tabJours[4] }}],
                ['J+6', {{ tabJours[5] }}],
                ['J+7', {{ tabJours[6] }}],

            ]);

            var options = {
                title: 'Nombre de lits occup√©s',
